@model WebUI.Models.SupplyModels.IndexViewModel

@{
    ViewBag.Title = "Модели расходных материалов";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Items.FirstOrDefault().PartNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items.FirstOrDefault().CompatiblePrinterModels)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items.FirstOrDefault().SuppliesCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Items) {
    <tr>
        <td>
            @Html.DisplayFor(x => item.PartNumber)
        </td>
        <td>
            @Html.DisplayFor(x => item.Name)
        </td>
        <td>
            <ul style="list-style:none">
                @foreach (var printerModel in item.CompatiblePrinterModels)
                {
                    <li>@printerModel</li>
                }
            </ul>
        </td>
        <td>
            @Html.DisplayFor(x => item.Comment)
        </td>
        <td>
            @Html.DisplayFor(x => item.SuppliesCount)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
