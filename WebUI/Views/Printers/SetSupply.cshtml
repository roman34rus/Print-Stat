@model WebUI.Models.Printers.SetSupplyViewModel

@{
    ViewBag.Title = "Замена расходного материала";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PrinterModelId)
        @Html.HiddenFor(model => model.PrinterId)
        @Html.HiddenFor(model => model.SupplySlotId)
        
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SupplyId, Model.CompatibleSupplies, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SupplyId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку", "Supplies", new { id = Model.PrinterId })
</div>

